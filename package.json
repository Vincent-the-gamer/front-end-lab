{
  "name": "front-end-lab",
  "type": "module",
  "version": "1.0.0",
  "description": "♥️ Opinionated Vitepress Template ♥️",
  "author": "",
  "license": "ISC",
  "keywords": [
    "frontend"
  ],
  "scripts": {
    "serve": "vitepress dev contents",
    "build": "vitepress build contents",
    "preview": "vitepress preview contents",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dep": "taze major",
    "wasm:dev": "wasm-pack build ./wasm --target web --out-dir output",
    "wasm:build": "wasm-pack build ./wasm --release --target web --out-dir output"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.3.0",
    "@shikijs/vitepress-twoslash": "^3.1.0",
    "@types/node": "^22.13.8",
    "eslint": "^9.21.0",
    "eslint-plugin-format": "^1.0.1",
    "medium-zoom": "^1.1.0",
    "simple-git-hooks": "^2.11.1",
    "taze": "^18.6.0",
    "unocss": "66.1.0-beta.5",
    "vite": "^6.2.0",
    "vite-plugin-top-level-await": "^1.5.0",
    "vite-plugin-wasm": "^3.4.1",
    "vitepress": "2.0.0-alpha.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "@swc/core"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run lint:fix"
  }
}
